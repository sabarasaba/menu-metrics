.pieRoot {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 40px;
  height: 40px;
  line-height: 45px;
  display: inline-block;
  margin-right: .5rem;
  text-align: center;
  transform: translateY(-5px) translateX(-5px);

  &.reverse {
    margin-right: 0;
    transform: translateX(0) translateY(-5px);
  }
}

.sparklineRoot {
  margin-right: 1rem;

  &.reverse {
    margin-right: 0;
  }
}

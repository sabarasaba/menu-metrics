.root {
  text-align: center;
  width: 110px;
  height: 110px;
  padding: 1rem;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0 15px 35px rgba(50,50,93,.1), 0 5px 15px rgba(0,0,0,.07);
}

.root + .root {
  margin-left: 3%;
}

.root .number {
  color: #8f6ed5;
  font-size: 30px;
  margin-bottom: 14px;
  margin-top: 7px;
}

.root .text {
  line-height: 16px;
}

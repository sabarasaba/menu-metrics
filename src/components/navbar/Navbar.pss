.root {
  position: fixed;
  left: 0;
  width: 100%;
  top: 0;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  padding: 1rem;
  background-color: #FFF;
}

.root a {
  display: flex;
  align-items: center;
}

.loading {
  animation:spin 4s linear infinite;
}

@keyframes spin { 100% { transform:rotate(-360deg); } }
